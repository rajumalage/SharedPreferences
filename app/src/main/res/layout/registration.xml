<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="111dp"
        android:layout_height="28dp"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="15dp"
        android:fontFamily="serif"
        android:text="User Name:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintRight_toLeftOf="@+id/editUserName"
        android:id="@+id/textView11" />

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="15dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:layout_marginTop="76dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Password"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="313dp" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPassword"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="287dp"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Confirm Password:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/editCPass"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:ems="10"
        android:fontFamily="serif"
        android:textSize="15dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="347dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="I Accept all the terms and Conditions"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/sgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="457dp" />

    <Button
        android:id="@+id/exBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="457dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="26dp"
        android:fontFamily="serif"
        android:text="Date Of Birth:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/editDob" />

    <EditText
        android:id="@+id/editDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="date"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/editUserName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Contact No.:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Email ID:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:maxLength="10"
        android:inputType="number"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="183dp" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="234dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="465dp"
        android:layout_height="68dp"
        android:text="Registration Form"
        android:fontFamily="serif"
        android:textSize="40dp"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-2dp" />

</android.support.constraint.ConstraintLayout>